// event.fbs
namespace event;

table ByteArray {
	bytes:[byte];
}

union EventData {
	ByteArray,
	String:string
}

enum Priority: int {
	NORMAL_PRIORITY,
	HIGH_PRIORITY
}

table Event {
  name:string (key);
  timestamp:ulong = -1;
  priority:Priority = NORMAL_PRIORITY;
  repeat:uint = 0;
  period:uint = 0;
  data:EventData;
}

root_type Event;